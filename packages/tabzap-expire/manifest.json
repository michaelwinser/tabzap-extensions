{
    "manifest_version": 3,
    "name": "TabZap Expire",
    "version": "1.0",
    "description": "Automatically close inactive tabs after a configurable timeout",
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_icon": "icon48.png"
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    },
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "permissions": [
        "tabs", "storage", "alarms"
    ]
}
