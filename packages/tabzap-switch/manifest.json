{
    "manifest_version": 3,
    "name": "TabZap Switch",
    "version": "1.0",
    "description": "Alt-Tab style tab switcher with Most Recently Used ordering",
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_icon": "icon48.png"
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    },
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "permissions": [
        "tabs", "storage", "scripting", "activeTab"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "commands": {
        "switch-previous": {
            "suggested_key": {
                "default": "MediaPrevTrack"
            },
            "description": "Switch to previous tab (back in history)"
        },
        "switch-next": {
            "suggested_key": {
                "default": "MediaNextTrack"
            },
            "description": "Switch to next tab (forward in history)"
        }
    }
}
